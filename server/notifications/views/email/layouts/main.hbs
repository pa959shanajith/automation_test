<html>

<body>
  {{#if mainTemplateNotRequired}}
    <table style="font-family: 'Calibri', Arial, sans-serif; width:100%;font-size:11pt;">
      <tbody>
        <tr>
          <td>
            {{{body}}}
          </td>
        </tr>
      </tbody>
    </table>
  {{else}}
  {{> header }}
	<table style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
		 border: .2em solid; border-color: #F5F5F5; width:100%; border-collapse: collapse">
		<tbody>
			<tr>
				<td>
					<table style="border:0.5px solid; width:100%; border-collapse: collapse">
						<tbody>
							<tr>
								<td>
									{{{body}}}
								</td>
							</tr>
						</tbody>
					</table>
				</td>
			</tr>
		</tbody>
	</table>
  {{/if}}
  {{> footer }}
</body>

</html>